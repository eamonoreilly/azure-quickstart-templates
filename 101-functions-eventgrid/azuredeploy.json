{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "eventGridTopicName": {
      "type": "string",
      "defaultValue": "[format('topic-{0}', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "The name of the Event Grid custom topic."
      }
    },
    "eventGridSubscriptionName": {
      "type": "string",
      "defaultValue": "[format('sub-{0}', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "The name of the Event Grid custom topic's subscription."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location in which the Event Grid resources should be deployed."
      }
    },
    "functionAppResourceGroup": {
    "type": "string",
    "metadata": {
        "description": "Specify the name of the resource group where the function application exists"
        }
    },
    "functionAppName": {
        "type": "string",
        "metadata": {
            "description": "Specify the name of the function application"
            }
    },
    "functionName": {
        "type": "string",
        "metadata": {
            "description": "Specify the name of the function in the application to be called from the event grid subscription"
            }
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.EventGrid/topics",
      "apiVersion": "2020-06-01",
      "name": "[parameters('eventGridTopicName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.EventGrid/eventSubscriptions",
      "apiVersion": "2020-06-01",
      "scope": "[format('Microsoft.EventGrid/topics/{0}', parameters('eventGridTopicName'))]",
      "name": "[parameters('eventGridSubscriptionName')]",
      "properties": {
        "destination": {
            "endpointType": "AzureFunction",
            "properties": {
                "resourceId": "[resourceId(parameters('functionAppResourceGroup'), 'Microsoft.Web/sites/functions/', parameters('functionAppName'), parameters('functionName'))]"
            }
        }
    },
      "dependsOn": [
        "[resourceId('Microsoft.EventGrid/topics', parameters('eventGridTopicName'))]"
      ]
    }
  ]
}